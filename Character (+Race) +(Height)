//package cpsc5000.javadoc;

import java.util.Random;
import java.util.Scanner;
import javax.swing.JOptionPane;

/**
 *
 * @author parisa
 */
public class Character
{
    private int choice;
    private int sum;
    private String nameChar;
    private String gender;
    private int race;
    private int strength;
    private int dexterity;
    private int constitution;
    private int intelligence;
    private int wisdom;
    private int charisma;
    
    public Character(){
    }
    
    
    public int chooseMethod1()
    {
        sum = 0;
        Random rand = new Random();
        for(int a = 0; a<4; a++)
        {                
            int i = rand.nextInt(6)+1;
            sum = sum + i;
            
            if (sum < 3 || sum > 18)
            {
                continue;
            }                
        }
        
        return sum;
    }
    
    public int chooseMethod2()
    {
        sum = 0;
        while(sum == 0)
        {
            for(int s = 0; s<7; s++) // for abilities
            {
                sum = 0;
                Random rand = new Random();
                int[] number = new int[5]; //for choosing 5 number
                
                for (int b = 0; b<5; b++)  //for choosing 5 number
                {
                    int i = rand.nextInt(6)+1;
                    number[b] = i;
                }

                for (int c = 0; c<4; c++)  //for choosing 3 of them for summing
                {        
                    int max_num = number[0];
                    int e = 0;
                    for(int d = 0; d<number.length; d++)
                    {
                        if(number[d]>max_num)
                        {
                            max_num = number[d];
                            e = d;
                        }                    
                    }
                    //maxArray[c] = max_num;
                    number[e] = 0;
                    sum = sum + max_num;
                    //System.out.print("sum = "+ sum + "\n");
                
                }
            }
            if (sum < 3 || sum > 18)
            {
                sum = 0;
                continue;
            }
        }                    
        return sum;
    }
    
    public int chooseMethod3()
    {
        sum = 0;
            
        while (sum == 0)
        {
            for(int s = 0; s<7; s++)
            {
                sum = 0;
                Random rand = new Random();
                int[] number = new int[5];
                //int[] maxArray = new int[3];
                //ArrayList<Integer> number = new ArrayList<Integer> ();

                for (int b = 0; b<5; b++)
                {
                    int i = rand.nextInt(6)+1;
                    number[b] = i;
                }

                for (int c = 0; c<4; c++)
                {        
                    int max_num = number[0];
                    int e = 0;
                    for(int d = 0; d<number.length; d++)
                    {
                        if(number[d]>max_num)
                        {
                            max_num = number[d];
                            e = d;
                        }                    
                    }
                    number[e] = 0;

                    //maxArray[c] = max_num;
                    Random plus = new Random();
                    int[] plusNumber = new int[3];                    
                    for (int f = 0; f<3; f++)
                    {
                        int j = plus.nextInt(3)+1;
                        plusNumber[f] = j;
                    }

                    int maxPlus = plusNumber[0];
                    for(int d = 1; d<plusNumber.length; d++)
                    {
                        if(plusNumber[d]>max_num)
                        {
                            maxPlus = plusNumber[d];
                        }                    
                    }                   
                    sum = sum + max_num+ maxPlus;
                    //System.out.print("sum = "+ sum + "\n");
                }
            }
            if (sum < 3 || sum > 18)
            {
                sum = 0;
                continue;
            }
        }
        return sum;        
    }
    
    //public void createCharacter(int choice, String nameChar, String gender)  // commented by Ali
    public void createCharacter(int choice, String nameChar, String gender,int race)        
    {
        this.nameChar = nameChar;
        this.gender = gender;
        this.choice = choice;
        this.race=race;

        if (choice == 1)
        {   
            this.strength = chooseMethod1();
            this.dexterity = chooseMethod1();
            this.constitution = chooseMethod1();
            this.intelligence = chooseMethod1();
            this.wisdom = chooseMethod1();
            this.charisma = chooseMethod1();
            
        }
        if (choice == 2)
        {
            this.strength = chooseMethod2();
            this.dexterity = chooseMethod2();
            this.constitution = chooseMethod2();
            this.intelligence = chooseMethod2();
            this.wisdom = chooseMethod2();
            this.charisma = chooseMethod2(); 
            
        }
        
        if (choice == 3)
        {
            this.strength = chooseMethod3();
            this.dexterity = chooseMethod3();
            this.constitution = chooseMethod3();
            this.intelligence = chooseMethod3();
            this.wisdom = chooseMethod3();
            this.charisma = chooseMethod3();             
            
        }
        if(race==2) {
        	dexterity=dexterity+2;
        	intelligence=intelligence+2;
        	constitution=constitution-2;
        }
        if(race==3) {
        	strength=strength+2;
        	constitution=constitution+2;
        	charisma=charisma-2;
        }
        if(race==4) {
        	dexterity=dexterity+2;
        	constitution=constitution+2;
        	strength=strength-2;
        }
        if(race==5) {
        	dexterity=dexterity+2;
        	wisdom=wisdom+2;
        	strength=strength-2;
        }
        System.out.print("Strength = "+ strength+ "\n"+ "Dexterity = "+ dexterity +"\n"+
                "Constitution = "+ constitution+"\n"+"Intelligence = " + intelligence + "\n"+
                "Wisdom = "+ wisdom+"\n"+ "Charisma = "+ charisma+ "\n");
    }
    public double generateHeight(){
       
        double height =0; 
        Random hRandom = new Random();
        
        switch (race){
             case 1 ->              {//If the race is Human
                 if (gender.equalsIgnoreCase("Male"))
                     height = hRandom.nextDouble(4.6, 7.5);
                 else
                     height = hRandom.nextDouble(4.4, 6.7);
             }
             case 2 ->              {//If the race is Elf
                 if (gender.equalsIgnoreCase("Male"))
                     height = hRandom.nextDouble(4, 5.6);
                 else
                     height = hRandom.nextDouble(3.8, 5.4);
                 
             }
             case 3 ->              {//If the race is Dwarf
                 if (gender.equalsIgnoreCase("Male"))
                     height = hRandom.nextDouble(4, 4.10);
                 else
                     height = hRandom.nextDouble(3.8, 4.7);
             }
             case 4 ->              {//If the race is Gnome
                 if (gender.equalsIgnoreCase("Male"))
                     height = hRandom.nextDouble(2.6, 3.5);
                 else
                     height = hRandom.nextDouble(2.4, 3.3);
             }
             case 5 ->              {//If the race is Halfling
                 if (gender.equalsIgnoreCase("Male"))
                     height = hRandom.nextDouble(3.2, 4.3);
                 else
                     height = hRandom.nextDouble(2.11, 4.1);
             }
            
        }
         return height;
    }
    
    public double generateAge()//KK Creating a method to auto generate age based on race selected 
    {
    
    }
           
       
      
    
        
        
       
    
}
